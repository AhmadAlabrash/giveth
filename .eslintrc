{
  "plugins": [
    "import",
  ],
  "extends": [
    "next/core-web-vitals",
    "plugin:@next/next/recommended",
    "plugin:prettier/recommended"
  ],
  "rules": {
    "react/no-unescaped-entities": "warn",
    "import/order": ["error", {
      "groups": ["builtin", "external", ["internal", "parent", "sibling"], "index", "object", "type"]
    }],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "typescript": {}
    }
  }
}
